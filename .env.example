# SpiderMail Environment Configuration
# Copy this file to .env and update with your actual values
# This file is safe to commit to version control

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=spidermail
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Spider Configuration
REQUEST_DELAY=1.0
MAX_RETRIES=3
REQUEST_TIMEOUT=30
CONCURRENT_REQUESTS=5
USER_AGENT_ROTATION=true
PROXY_ENABLED=false
PROXY_LIST=

# Platform Settings
TAOBAO_BASE_URL=https://s.taobao.com
JD_BASE_URL=https://search.jd.com
MOBILE_CATEGORY=手机
MAX_PRODUCTS_PER_PAGE=100
MAX_REVIEWS_PER_PRODUCT=1000

# Schedule Configuration
SCHEDULE_ENABLED=true
CRAWL_TIME=02:00
TIMEZONE=Asia/Shanghai
RETRY_ON_FAILURE=true
MAX_RETRY_ATTEMPTS=3

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/spidermail.log
LOG_MAX_FILE_SIZE=100 MB
LOG_BACKUP_COUNT=5